<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="triangle" class="cb.springdemo.Triangle">
		<property name="pointA" ref="origin"/>
		<property name="pointB" ref="pointOne"/>
		<property name="pointC" ref="pointTwo"/>

	</bean>

	<bean id="origin" class="cb.springdemo.Point">
		<property name="x" value="0"/>
		<property name="y" value="0"/>		
	</bean>
	
		<bean id="pointOne" class="cb.springdemo.Point">
		<property name="x" value="-20"/>
		<property name="y" value="0"/>		
	</bean>
	
		<bean id="pointTwo" class="cb.springdemo.Point">
		<property name="x" value="0"/>
		<property name="y" value="20"/>		
	</bean>
</beans>


